@model IEnumerable<WebAppVentas.Models.TbProveedor>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<body>
    <a asp-action="Add">Nuevo Proovedor</a>
    <h1 class="display-3">Listado de Proveedores</h1>
    <h4>
        Buscar<input class="form-control" id="myInput" type="text" placeholder="Search..." />
        <br />
    </h4>
    <table class="table table-bordered table-hover">
        <thead class="table-dark">
            <tr>
                <td scope="col">Codigo</td>
                <td scope="col">Razon Social</td>
                <td scope="col">Direccion</td>
                <td scope="col">Telefono</td>
                <td scope="col">Codigo Distrito</td>
                <td scope="col">RepVen</td>
            </tr>
        </thead>
        <tbody id="myTable">
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.CodPrv</td>
                    <td>@item.RazSocPrv</td>
                    <td>@item.DirPrv</td>
                    <td>@item.TelPrv</td>
                    <td>@item.CodDis</td>
                    <td>@item.RepVen</td>
                    <td><a asp-action="Delete" asp-route-id="@item.CodPrv">Delete</a></td>
                    <td><a asp-action="Edit" asp-route-id="@item.CodPrv">Edit</a></td>
                </tr>
            }
        </tbody>
    </table>
</body>

<script>
        $(document).ready(function () {
            $("#myInput").on("keyup", function () {
                var value = $(this).val().toLowerCase();
                $("#myTable tr").filter(function () {
                    $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
                });
            });
        });
</script>